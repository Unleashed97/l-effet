extends ../layout/default.pug

block title
    Balados 

block content 
    //- intro
    .section.section__podcasts-intro.section--reversed.section--intro 
        .container 
            .section__inner
                .section__text-block 
                    h1.section__title Balados 
                    p.section__text Partez à la rencontre de coops et de mutuelles d’ici en compagnie de la comédienne et chroniqueuse Gabrielle Côté. Néophyte du monde coopératif et mutualiste, elle dresse un portrait de ces entreprises ancrées dans leurs communautés.
                    .podcasts__caster
                        img.podcasts__caster-image(src="images/podcasts/caster.jpg" alt="Gabrielle Côté, caster")
                        .podcasts__caster-info 
                            p.podcasts__caster-title animé par
                            p.podcasts__caster-name Gabrielle Côté
                            p.podcasts__caster-about Comédienne | chroniqueuse
                .section__image-block 
    .podcasts
        .container 
            .podcasts__inner
                p.podcasts__recommended En vedette
                .player
                    img.player__image(src="images/player/podcast-image.jpg", alt="Podcast. Episode 1")
                    .player__podcast-info
                        p.player__podcast-episode-counter épisode 1
                        p.player__podcast-episode-name EVA, le Uber québécois
                    .player__body
                        .player__buttons
                            button.btn.btn--plain 
                                img(src="images/player/icons/play.jpg" alt="play the podcast")
                            button.btn.btn--plain
                                img(src="images/player/icons/stop.jpg" aly="stop the podcast")
                        .player__track
                .podcasts__list.card__list
                    .card__item
                        img.card__item-image(src="images/podcasts/cards/ep1.jpg", alt="Episode 1 cover")
                        .card__item-text-block 
                            p.player__podcast-episode-counter épisode 0
                            p.player__podcast-episode-name Teaser
                            p.player__podcast-episode-date 10/15/2020
                            button.btn en savoir plus
                    .card__item
                        img.card__item-image(src="images/podcasts/cards/ep2.jpg", alt="Episode 2 cover")
                        .card__item-text-block 
                            p.player__podcast-episode-counter épisode 1
                            p.player__podcast-episode-name EVA, le Uber québécois
                            p.player__podcast-episode-date 12/16/2020
                            button.btn en savoir plus

    //- podcasts services
    .podcasts-services
        .container 
            .podcasts-services__inner
                .podcasts-services__list
                    .podcasts-services__item
                        p.podcasts-services__item-text Écoutez sur
                        img.podcasts-services__item-image(src="images/podcasts/services/spotify.png", alt="spotify")
                    .podcasts-services__item
                        p.podcasts-services__item-text Écoutez sur
                        img.podcasts-services__item-image(src="images/podcasts/services/soundcloud.png", alt="soundcloud")
                    .podcasts-services__item
                        p.podcasts-services__item-text Écoutez sur
                        img.podcasts-services__item-image(src="images/podcasts/services/buzzsprout.png", alt="buzzsprout")
                    img.podcasts-services__primary(src="images/podcasts/services/soundcloud-big.png", alt="soundcloud")
    //- feedback
    section.section.section--default.section__feedback
        .container 
            .section__inner 
                .section__image-block 
                    img(src="images/feedback/feedback-red.png", alt="Feedback")
                .section__text-block 
                    h1.section__title Partagez votre expérience à saveur coopérative
                    p.section__text Vous avez une initiative qui contribue aux valeurs coopératives? Partagez-là avec nous en nous envoyant les informations par courriel.
                    .section__button-wrapper
                        button.btn partager son expérience
                        button.btn voir les initiatives